<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bo.xMarket.dao.ProductDao">
    <select id="listProductsByBranch" resultType="com.bo.xMarket.model.Product">
        SELECT a.product_id  as productId,
               a.product_category_id as productCategoryId,
               a.name                as name,
               a.price               as price,
               a.description         as description,
               a.weight              as weight
        FROM product a,
             product_branch_office b,
             branch_office c
        WHERE c.id_branch_office = b.branch_office_id_branch_office
          AND b.product_product_id = a.product_id
          AND c.id_branch_office = #{idbranch}

    </select>
    <insert id="addproduct" parameterType="com.bo.xMarket.model.Product">
        INSERT INTO product
        VALUES (null, #{productCategoryId},
                #{name}, #{price}, #{description}, #{weight},
                #{status}, #{transaction.txHost},
                #{transaction.txUserId}, #{transaction.txDate}, null)
    </insert>
    <select id="productsDetails" resultType="com.bo.xMarket.model.Product">
        SELECT product_id          as productId,
               product_category_id as productCategoryId,
               name                as name,
               price               as price,
               description         as description,
               weight              as weight,
               status              as status
        FROM product
        WHERE product_id = #{productid}

    </select>

    <update id="deleteProduct">
        UPDATE product
        SET status=0
        WHERE (product_id = #{productId})
    </update>

    <select id="getLastInsertId" resultType="java.lang.Integer">
        SELECT LAST_INSERT_ID()
    </select>
</mapper>
