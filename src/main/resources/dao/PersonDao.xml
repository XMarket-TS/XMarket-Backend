<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bo.xMarket.dao.PersonDao">
    <insert id="addPerson" parameterType="com.bo.xMarket.model.Person">
        INSERT INTO person
        VALUES (null, #{name}, #{surname}, #{email},
                #{description}, #{cellphone}, #{status},
                #{transaction.txHost}, #{transaction.txUserId}, #{transaction.txDate})
    </insert>
    <select id="getLastPersonId" resultType="java.lang.Integer">
        SELECT LAST_INSERT_ID()
    </select>
    <select id="getPersonById" resultType="com.bo.xMarket.model.Person">
        SELECT person_id   as personId,
               name        as name,
               surname     as surname,
               email       as email,
               description as description,
               gender      as gender,
               photo       as photo,
               cellphone   as cellphone
        FROM person
        WHERE person_id = #{personId}
    </select>

</mapper>
